@model MvcMusicStore.Models.Album

<div class="panel panel-primary">

    <div class="panel-heading">
        <h3 class="panel-title">Your Daily Deal: @Model.Title</h3>
    </div>
    <div class="panel-body">
        <p><img alt="@Model.Title" src="@Url.Content(@Model.AlbumArtUrl)" width="200px"/></p>
        <div id="album-details">
            <p><stong>Artist: @Model.Artist.Name</stong></p>
            <p>Price: @String.Format("{0:F}", Model.Price)</p>
            @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = Model.AlbumId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

